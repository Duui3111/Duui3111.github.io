RewriteEngine on 

RewriteCond %{REQUEST_FILENAME} !-d 
RewriteCond %{REQUEST_FILENAME}\.html -f  

RewriteRule ^(.*)$ $1.html [NC,L] 
RewriteRule ^pages?$ $1 [L,NC] 

ErrorDocument 404 /404.html

Options +FollowSymLinks -MultiViews
# Turn mod_rewrite on
RewriteEngine On
RewriteBase /

RewriteRule ^pages/(.*)$ /$1 [L,NC,R]


RewriteEngine On
RewriteBase /

RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+folder/([^\s]+) [NC]
RewriteRule ^ %1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule (?!^folder/)^(.*)$ /pages/$1 [L,NC]



Options -MultiViews

RewriteRule ^pages(/.*?)(?:\.html)?$ $1 [R=301,L]
RewriteCond %{DOCUMENT_ROOT}/pages/$1 -f
RewriteRule (.+\.(css|js|png|jpg|gif))$ /pages/$1 [L]
RewriteCond %{DOCUMENT_ROOT}/pages/$1.html -f
RewriteRule ^([^.]+)$ /companies/$1.html [L]
